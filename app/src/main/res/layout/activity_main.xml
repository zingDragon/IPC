<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zjl.ipc.MainActivity">


    <Button
        android:id="@+id/local_binder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="Local service with binder"/>

    <Button
        android:id="@+id/remote_messenger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/local_binder"
        android:onClick="onButtonClick"
        android:text="Remote service with messenger"/>

    <Button
        android:id="@+id/remote_aidl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/remote_messenger"
        android:onClick="onButtonClick"
        android:text="Remote service with aidl"/>
</RelativeLayout>
